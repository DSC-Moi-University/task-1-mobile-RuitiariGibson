<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="com.gibsoncodes.moidscandroid.MovieAdapter" />
        <variable
            name="viewModel"
            type="com.gibsoncodes.moidscandroid.MoviesViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<com.google.android.material.imageview.ShapeableImageView
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/mainImage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:src="@drawable/test_pic_1"
    android:scaleType="centerCrop"
    app:shapeAppearance="@style/RoundedImageStyle"
    android:layout_height="250dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/horizontalGuideMain"
        app:layout_constraintGuide_begin="280dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/horizontalGuideMain"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Artic Justice(2019)"
        android:textSize="25sp"
        android:text="@string/artic_justice_2019"
        android:id="@+id/movie_name"
        android:layout_marginStart="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_height="wrap_content"/>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:singleLine="true"
        android:id="@+id/chipGroup"
        app:chipSpacingHorizontal="15dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintTop_toBottomOf="@id/movie_name"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:text="@string/animation"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:chipCornerRadius="12dp"
            app:chipBackgroundColor="@android:color/black"
            android:layout_height="wrap_content"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:text="@string/comedy"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:chipCornerRadius="12dp"
            app:chipBackgroundColor="@android:color/holo_orange_dark"
            android:layout_height="wrap_content"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:text="@string/adventure"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:chipCornerRadius="12dp"
            app:chipBackgroundColor="@android:color/holo_blue_light"
            android:layout_height="wrap_content"/>
    </com.google.android.material.chip.ChipGroup>
<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    app:layout_constraintGuide_begin="400dp"
    android:orientation="horizontal"
    android:id="@+id/horizontalGuideMainTwo"
    android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/now_playing_label"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideMainTwo"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="@string/now_playing"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@id/now_playing_label"
        android:layout_marginEnd="30dp"
        android:id="@+id/drag_button"
        app:layout_constraintTop_toBottomOf="@id/horizontalGuideMainTwo"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/drag_line"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/move_recycler_view"
        app:rvAdapter="@{adapter}"
        app:moviesList="@{viewModel.moviesList}"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/now_playing_label"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/movie_items"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
