<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="movies"
            type="com.gibsoncodes.moidscandroid.Movies" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <androidx.constraintlayout.widget.Guideline
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:id="@+id/vertical_guide"
     app:layout_constraintGuide_begin="100dp"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/vertical_guide"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        app:loadThumbnail="@{movies.movieThumbnail}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuide"
        app:shapeAppearance="@style/RoundedImageStyle"
        app:srcCompat="@drawable/test_pic_1"
        android:id="@+id/movie_thumbnail"
        android:layout_height="80dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        tools:text="Terminator dark fate"
        app:layout_constraintBottom_toTopOf="@id/movieRevenue"
        android:textSize="20sp"
        android:text="@{movies.movieName}"
        android:id="@+id/movie_name"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/vertical_guide"
        android:layout_margin="10dp"
        tools:text="$17.0M"
        android:textColor="@color/black70"
        android:textSize="16sp"
        app:revenueFormatter="@{movies.movieRevenue}"
        android:id="@+id/movieRevenue"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuide"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalGuide"
        app:layout_constraintGuide_begin="100dp"
        android:orientation="horizontal"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toRightOf="@id/movie_name"
        android:layout_marginEnd="40dp"
        tools:text="9.6"
        android:textSize="17sp"
        app:ratingFormatter="@{movies.movieRatings}"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/start_icon"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
